<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= user.fname %>'s DevCard</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/luxonauta/luxa@1.1/dist/expanded/luxa.css"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <main class="has-dflex-center">
      <section>
        <div class="lx-container-85">
          <div class="lx-row align-stretch">
            <div class="lx-column is-3">
              <div class="lx-row">
                <div class="lx-card">
                  <div class="lx-row">
                    <div class="has-dflex-center bs-md pic">
                      <img
                        src="<%= user.githubUrl %>"
                        alt="github"
                      />
                    </div>
                    <div class="infos">
                      <span
                        ><i class="fas fa-user-circle"></i>&nbsp;&nbsp;<%= user.fname %></span
                      ><span
                        ><i class="fas fa-briefcase"></i>&nbsp;&nbsp;Full Stack
                        Developer</span
                      ><span
                        ><i class="fas fa-map-marker-alt"></i
                        >&nbsp;&nbsp;Vancouver, Canada</span
                      >
                    </div>
                  </div>
                </div>
                <div class="lx-card">
                  <h1 class="title">My Picture Gallery URL:</h1>
                  <div class="text">
                    <span>http://localhost:8007/54az3/photos</span>
                  </div>
                </div>
                <div class="lx-card">
                  <div class="lx-row">
                    <h1 class="title">Connect with <%= user.fname %></h1>
                    <div class="mini-cards">
                      <a
                        class="has-dflex-center bs-md"
                        href="<%= user.githubURL %>"
                        target="_blank"
                        rel="noopener noreferrer"
                        ><i class="fab fa-github-alt"></i></a
                      ><a
                        class="has-dflex-center bs-md"
                        href="https://www.twitter.com/bcit"
                        target="_blank"
                        rel="noopener noreferrer"
                        ><i class="fab fa-twitter"></i
                      ></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="lx-column">
              <div class="lx-row">
                <div class="lx-row lx-card">
                  <h1 class="title">
                    <i class="fas fa-info-circle"></i>&nbsp;Welcome to <%= user.fname %>'s
                    corner of the Internet
                  </h1>
                </div>
                <div class="lx-row lx-card">
                  <h1 class="title">
                    <i class="fas fa-hand-point-right"></i>&nbsp;About me
                  </h1>
                  <div class="text">
                    <p>
                      <%= user.aboutMe %>
                    </p>
                    <p>
                      I&nbsp;&nbsp;<i class="fas fa-heart"></i>&nbsp; to code
                      full-stack projects, always looking for innovative ways to
                      write code that follows practices!
                    </p>
                  </div>
                </div>
                <div class="lx-row lx-card">
                  <h1 class="title">
                    <i class="fas fa-terminal"></i>&nbsp;Technologies
                  </h1>
                  <div class="mini-cards">
                    <% user.skills.forEach(skill => {%>
                      <span class="has-dflex-center bs-md" title="<%= skill %> "
                      ><i class="<%= mapping[skill] %>"></i></span>
                      <% }) %>
                  </div>
                </div>
                <div class="lx-row lx-card">
                  <h1 class="title">
                    <i class="fas fa-book"></i>&nbsp;My favorite books
                  </h1>
                  <div class="text">
                    <ol>
                      <% user.favouriteBooks.split(",").forEach(book => { %>
                        <li>
                          <p><b><%= book.split("-")[0] %></b>&nbsp;- <%= book.split("-")[1] %></p>
                        </li>
                      <% }) %>
                    </ol>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <script src="https://use.fontawesome.com/releases/v5.14.0/js/all.js"></script>
  </body>
</html>
